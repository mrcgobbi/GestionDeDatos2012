@model IEnumerable<AplicacionTickets.Models.Artista>

@{
    ViewBag.Title = "EOfrecidos";
}


<ul id="submenu">
    <li>@Html.ActionLink(" ( DESC ) ", "EOfrecidos", new { or = "0" })</li>  
    <li>@Html.ActionLink(" ( ASC ) ", "EOfrecidos", new { or = "1"})</li>
</ul>


<h2>@ViewBag.Mensaje</h2>

<table>
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Nombre)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Genero)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Tipo)
        </th>
        <th>
            Cantidad
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Nombre)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Genero)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Tipo)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Espectaculos.Count)
        </td>
        <td>
            @Html.ActionLink("Ver Mas", "Details", "Artista", new { id=item.ArtistaId }, null)
        </td>
    </tr>
}

</table>


<div>
    @Html.ActionLink("Volver", "Index", "Admin")
</div>