@model IEnumerable<AplicacionTickets.Models.Espectaculo>

@{
    ViewBag.Title = "Index";
}


<ul id="submenu">
    <li>@Html.ActionLink("Teatrales", "Index", new { t = "Teatro" })  </li>
    <li>@Html.ActionLink("Conciertos", "Index", new { t = "Concierto" })  </li>
    <li>@Html.ActionLink("Deportes", "Index", new { t = "Deporte" })  </li>
</ul>


<h2>Espectaculos</h2>

<table>
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Titulo)
        </th>        
        <th>
            Artista
        </th>
        <th>
            Lugar
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Descripcion)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.FechaHora)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Titulo)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Artista.Nombre)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Lugar.Nombre)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Descripcion)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.FechaHora)
        </td>
        <td>
            @Html.ActionLink("Ver Mas", "Detalles", new { id=item.EspectaculoId })
        </td>
    </tr>
}

</table>
