@model IEnumerable<AplicacionTickets.Models.Espectaculo>

@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>

<p>
    @Html.ActionLink("Agregar Nuevo Espectaculo", "Create")
</p>
<table>
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Artista)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Lugar)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Titulo)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.FechaHora)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.FechaLimite)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Estado)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.CantGen)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Artista.Nombre)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Lugar.Nombre)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Titulo)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.FechaHora)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.FechaLimite)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Estado)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.CantGen)
        </td>
        <td>
            @Html.ActionLink("Editar", "Edit", new { id=item.EspectaculoId }) |
            @Html.ActionLink("Detalles", "Details", new { id=item.EspectaculoId }) |
            @Html.ActionLink("Eliminar", "Delete", new { id=item.EspectaculoId })
        </td>
    </tr>
}


</table>

<div>@Html.ActionLink("Volver", "Index", "Admin")</div>